<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Theme.LiteRead" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_light</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorError">@color/error_light</item>
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.LiteRead.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_dark</item>
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorError">@color/error_dark</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <!-- Sepia Theme -->
    <style name="Theme.LiteRead.Sepia" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_sepia</item>
        <item name="colorPrimaryVariant">@color/primary_dark_sepia</item>
        <item name="colorSecondary">@color/secondary_sepia</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_sepia</item>
        <item name="colorBackground">@color/background_sepia</item>
        <item name="colorSurface">@color/surface_sepia</item>
        <item name="android:statusBarColor">@color/surface_sepia</item>
        <item name="android:navigationBarColor">@color/background_sepia</item>
    </style>

    <!-- AMOLED Theme -->
    <style name="Theme.LiteRead.Amoled" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_amoled</item>
        <item name="colorPrimaryVariant">@color/primary_dark_amoled</item>
        <item name="colorSecondary">@color/secondary_amoled</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_amoled</item>
        <item name="colorBackground">@color/background_amoled</item>
        <item name="colorSurface">@color/surface_amoled</item>
        <item name="android:statusBarColor">@color/background_amoled</item>
        <item name="android:navigationBarColor">@color/background_amoled</item>
        <item name="android:windowBackground">@color/background_amoled</item>
    </style>

    <!-- Common Text Styles -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
